{
	"models": {
	    "sport": {
	        "includes": [
				"skills.variationOf", 
				"skills.parents", 
				"skills.lineages", 
				"skills.lineages.ancestor", 
				"skills.lineages.skill",
				"skills.featured-picture"
			]
		},
		"skill": {
			"relationships": {
				"skill_fk_start_position": "one-to-one",
				"skill_fk_end_position": "one-to-one",
				"skill_fk_featured_picture": "one-to-one"
			},
			"includes": [
				"sport.skills"
			],
			"filter": {
				"write": ["sequence_picture_url"]
			}
		},
		"group": {
			"includes": [
				"skills.variations", "skills.variationOf", "skills.multiples", "sport.objects"
			]
		},
		"object": {
			"includes": [
				"skills.variations", "skills.variationOf", "skills.multiples", "sport.objects"
			]
		},
		"picture": {
			"filter": {
				"write": ["url", "thumb_url"]
			}
		},
		"video": {
			"filter": {
				"write": ["url", "poster_url", "width", "height"]
			}
		}
	},
	"api": {
		"paths": {
			"/upload": {
				"post": {
					"description": "Upload media",
					"operationId": "upload",
					"responses": {
						"200": {
							"description": "Successful upload",
							"schema": {
								"type": "object",
								"properties": {
									"filename": {
										"type": "string"
									},
									"url": {
										"type": "string"
									}
								}
							}
						}
					}
				}
			},
			"/upload/{filename}": {
				"delete": {
					"description": "Delete uploaded media",
					"operationId": "upload-delete",
					"parameters": [
						{
							"name": "filename",
							"in": "path",
							"required": true,
							"description": "The filename",
							"type": "string"
						}
					],
					"responses": {
						"204": {
							"description": "Successful delete"
						}
					}
				}
			},
			"/oembed-fetch": {
				"get": {
					"description": "Fetch oEmbed from url",
					"operationId": "oembed-fetch",
					"parameters": [
						{
							"name": "url",
							"in": "path",
							"required": true,
							"description": "The url to fetch",
							"type": "string"
						}
					],
					"responses": {
						"200": {
							"description": "Successful fetch",
							"schema": {
								"type": "object",
								"properties": {
									"title": {
										"type": "string"
									},
									"description": {
										"type": "string"
									},
									"url": {
										"type": "string"
									},
									"type": {
										"type": "string"
									},
									"tags": {
										"type": "array"
									},
									"images": {
										"type": "object"
									},
									"image": {
										"type": "string",
										"description": "image url"
									},
									"image-width": {
										"type": "integer"
									},
									"image-height": {
										"type": "integer"
									},
									"code": {
										"type": "string",
										"description": "HTML embed code"
									},
									"width": {
										"type": "integer",
										"description": "Width of the embedded code"
									},
									"height": {
										"type": "integer",
										"description": "Height of the embedded code"
									},
									"aspect-ratio": {
										"type": "float",
										"description": "Aspect ratio of the embedded code"
									},
									"author-name": {
										"type": "string"
									},
									"author-url": {
										"type": "string"
									},
									"provider-name": {
										"type": "string"
									},
									"provider-url": {
										"type": "string"
									},
									"provider-icons": {
										"type": "object"
									},
									"provider-icon": {
										"type": "string",
										"description": "The url to icon choosen as main icon"
									},
									"published-date": {
										"type": "string"
									},
									"license": {
										"type": "string"
									}
								}
							}
						}
					}
				}
			}
		}
	}
}